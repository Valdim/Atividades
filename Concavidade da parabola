        System.out.println("Digite o valor de b");
        int b = tcl.nextInt();
        System.out.println("Digite o valor de c");
        int c = tcl.nextInt();
        
        if(a > 0){
            System.out.println("A concavidade é para cima");
        }
        else if(a < 0){
            System.out.println("A concavidade é para baixo");
        }
        else{
            System.out.println("A concavidade é para cima");
        }    
    } 
