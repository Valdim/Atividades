import java.util.Scanner;
import java.util.Random;
public class nova {
    public static void main(String[]args) {
          Scanner tcl = new Scanner(System.in);
          Random irineu = new Random();
          System.out.println("Digite o número que procuras");
          int pedido = tcl.nextInt();
          int vet[] = new int[1000];
          for (int i = 0; i < vet.length; i++) {
            vet[i] = irineu.nextInt(100);
                }
          for (int i = 0; i < vet.length; i++) {
            System.out.println(vet[i]);
                }
          
          for (int i = 0; i < vet.length; i++) {
            if(pedido == vet[i]){
                System.out.println("Na "+(i)+ "º posicão vetorial está o que procuras");
            }else{
                System.out.println("Ô meu caro, sinto muitissimo informá-lo que está além do alcance");
                break;
            }     
        }
    }
}
